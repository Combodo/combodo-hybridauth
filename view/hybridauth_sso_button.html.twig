{% for aProvider in aData %}
<tr>
    <td style="text-align:center" colspan="2">
        <div style="width:100%;margin-bottom: 0.5em;">
            <div style="width:19em; cursor: pointer; margin-left: auto; margin-right: auto; padding: 0.5em; background-color: #eee; border-radius: 0.25em;" title="{{ aProvider.sTooltip }}" onclick="$('#login_mode').val('{{ aProvider.sLoginMode }}'); $('#login_form').submit(); return false;">
                <i class="fa {{ aProvider.sFaImage|lower }} fa-2x" aria-hidden="true"></i>
                {{ aProvider.sLabel }}
            </div>
        </div>
    </td>
</tr>
{% endfor %}
